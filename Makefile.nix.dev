# Debugging and troubleshooting
debug: ## Debug environment issues
	@echo "üêõ Debugging Nix environment..."
	@echo "1. Checking Nix installation..."
	nix --version || echo "‚ùå Nix not installed"
	@echo "2. Checking flake configuration..."
	nix flake check . || echo "‚ùå Flake configuration issues"
	@echo "3. Testing basic environment..."
	nix develop --command echo "‚úÖ Basic environment loads" || echo "‚ùå Environment loading failed"
	@echo "4. Testing Python availability..."
	nix develop --command python --version || echo "‚ùå Python not available"
	@echo "5. Testing UV availability..."
	nix develop --command uv --version || echo "‚ùå UV not available"

debug-nest: ## Debug NEST-specific issues
	@echo "üß† Debugging NEST installation..."
	nix develop --command bash -c "\
		echo '1. Checking NEST binary...'; \
		which nest || echo '‚ùå NEST binary not found'; \
		echo '2. Checking NEST Python module...'; \
		python -c 'import sys; print(sys.path)'; \
		python -c 'import nest' || echo '‚ùå NEST Python module not available'; \
		echo '3. Checking library paths...'; \
		echo 'LD_LIBRARY_PATH:' \$$LD_LIBRARY_PATH; \
		echo 'PYTHONPATH:' \$$PYTHONPATH"