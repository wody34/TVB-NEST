examples: ## Run usage examples
	@echo "üìö Running usage examples..."
	nix develop --command bash -c "\
		if [ -d 'nest_elephant_tvb/orchestrator/tests/' ]; then \
			python -c 'from nest_elephant_tvb.orchestrator.tests.test_usage_examples import TestUsageExamples; t = TestUsageExamples(); print(\"üéØ Running examples...\"); t.test_traditional_workflow_example(); print(\"‚úÖ Examples completed!\")'; \
		else \
			echo 'üìö Running basic Python example...'; \
			python -c 'import numpy as np; print(f\"NumPy array: {np.array([1,2,3])}\"); print(\"‚úÖ Basic example works!\")'; \
