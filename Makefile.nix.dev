# TVB-NEST Nix Development Environment - Development & Testing
# Usage: make -f Makefile.nix.dev <target> or ./nix.dev <target>

.PHONY: help dev dev-quick test test-watch clean build docs lint status

# Default target
help: ## Show this help message
	@echo "üöÄ TVB-NEST Nix Development Environment - Commands"
	@echo "================================================================"
	@awk 'BEGIN {FS = ":.*##"} /^[a-zA-Z_-]+:.*##/ { printf "  \033[36m%-20s\033[0m %s\n", $$1, $$2 }' $(MAKEFILE_LIST)
	@echo ""
	@echo "üìä Quick Status:"
	@echo "  Nix Environment: $$(nix --version 2>/dev/null || echo 'Not available')"
	@echo "  UV Version: $$(uv --version 2>/dev/null || echo 'Not available')"
	@echo ""

# Development environment
dev: ## Start full Nix development environment with NEST
	@echo "üöÄ Starting TVB-NEST Nix development environment..."
	@echo "‚è≥ This may take 2-3 minutes for first-time NEST build..."
	nix develop --command bash -c "\
		echo '‚úÖ Nix environment loaded successfully!'; \
		echo 'üß™ Testing core modules...'; \
		python -c 'import nest; print(f\"‚úÖ NEST: {getattr(nest, \"__version__\", \"OK\")}\")' || echo '‚ùå NEST not available'; \
		python -c 'import numpy, scipy; print(\"‚úÖ Scientific stack: OK\")' || echo '‚ùå Scientific packages not available'; \
		echo 'üéØ Environment ready!'; \
		echo 'üìù Available commands:'; \
		echo '  jupyter lab --ip=0.0.0.0 --port=8893 --no-browser --allow-root'; \
		echo '  make -f Makefile.nix.dev test  # Run tests'; \
		echo '  make -f Makefile.nix.dev test-yaml  # Run YAML tests'; \
		bash"

dev-quick: ## Start quick development environment (no NEST build)
	@echo "üçé Starting quick Nix development environment..."
	nix develop .#macos-quick --command bash -c "\
		echo '‚úÖ Quick environment loaded!'; \
		echo 'üêç Testing Python packages...'; \
		python -c 'import numpy, scipy, matplotlib; print(\"‚úÖ Scientific packages: OK\")' || echo '‚ùå Scientific packages not available'; \
		echo 'üéØ Quick environment ready!'; \
		echo 'üìù Usage: jupyter lab --ip=0.0.0.0 --port=8893 --no-browser'; \
		bash"

dev-shell: ## Enter Nix development shell
	@echo "üêö Entering Nix development shell..."
	nix develop

dev-build: ## Force rebuild Nix environment
	@echo "üèóÔ∏è Rebuilding Nix environment..."
	nix develop --rebuild

dev-info: ## Show development environment information
	@echo "‚ÑπÔ∏è Nix Development Environment Information"
	@echo "========================================"
	nix develop --command bash -c "\
		echo 'Python: $$(which python)'; \
		echo 'Python Version: $$(python --version)'; \
		echo 'UV: $$(which uv) ($$(uv --version 2>/dev/null || echo \"not available\"))'; \
		echo 'MPI: $$(which mpirun) ($$(mpirun --version 2>/dev/null | head -1 || echo \"not available\"))'; \
		echo 'NEST: $$(which nest 2>/dev/null || echo \"not available\")'; \
		echo 'Environment Variables:'; \
		echo '  PYTHONPATH: $$PYTHONPATH'; \
		echo '  LD_LIBRARY_PATH: $$LD_LIBRARY_PATH'; \
		echo 'Virtual Environment: $$([ -d .venv ] && echo \"‚úÖ .venv exists\" || echo \"‚ùå No .venv\")'"

# Testing
test: ## Run all tests in Nix environment
	@echo "üß™ Running TVB-NEST tests in Nix environment..."
	@echo "================================================================"
	nix develop --command bash -c "\
		if [ -d 'nest_elephant_tvb/orchestrator/tests/' ]; then \
			echo 'üß™ Running Pydantic orchestrator tests...'; \
			python -m pytest nest_elephant_tvb/orchestrator/tests/ --tb=short --color=yes --no-header -ra --strict-markers --disable-warnings --maxfail=5 -v; \
		else \
			echo '‚ö†Ô∏è Pydantic orchestrator tests not found, running basic tests...'; \
		fi; \
		echo 'üéØ Test execution completed!'"

test-fast: ## Run tests with minimal output
	@echo "‚ö° Running fast tests..."
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/ --tb=line --no-header -q --color=yes --disable-warnings 2>/dev/null || echo "‚ùå Fast tests failed or not available"

test-verbose: ## Run tests with maximum verbosity
	@echo "üîç Running tests with verbose output..."
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/ -vvv --tb=long --color=yes --capture=no -s

test-yaml: ## Run YAML-based test system (Nix optimized)
	@echo "üìÑ Running YAML-based test system..."
	nix develop --command bash -c "\
		if [ -f 'tests/python_runners/yaml_test_runner_nix.py' ]; then \
			echo 'üìã Available tests:'; \
			python tests/python_runners/yaml_test_runner_nix.py list; \
			echo ''; \
			echo 'üß™ Running test_simple_python...'; \
			python tests/python_runners/yaml_test_runner_nix.py test_simple_python; \
		else \
			echo '‚ùå YAML test runner not found'; \
		fi"

test-mpi: ## Run MPI parallel processing tests
	@echo "üîÄ Running MPI parallel processing tests..."
	nix develop --command bash -c "\
		echo 'üß™ Testing MPI with 2 processes...'; \
		mpirun -n 2 \$$(which python) -c 'from mpi4py import MPI; comm = MPI.COMM_WORLD; print(f\"Process {comm.Get_rank()}/{comm.Get_size()} ‚úÖ\")'; \
		echo 'üß™ Testing MPI with 4 processes...'; \
		mpirun -n 4 \$$(which python) -c 'from mpi4py import MPI; comm = MPI.COMM_WORLD; print(f\"Process {comm.Get_rank()}/{comm.Get_size()} ‚úÖ\")'"

test-nest: ## Test NEST functionality
	@echo "üß† Testing NEST functionality..."
	nix develop --command bash -c "\
		python -c '\
import nest; \
nest.ResetKernel(); \
neuron = nest.Create(\"iaf_psc_alpha\"); \
print(f\"‚úÖ NEST neuron created: {neuron}\"); \
print(f\"‚úÖ NEST version: {getattr(nest, \"__version__\", \"Custom build\")}\")'"

test-scientific: ## Test scientific computing stack
	@echo "üî¨ Testing scientific computing stack..."
	nix develop --command bash -c "\
		python -c 'import sys; print(f\"Python: {sys.version}\")'; \
		python -c 'import numpy as np; print(f\"‚úÖ NumPy {np.__version__}\")' || echo '‚ùå NumPy failed'; \
		python -c 'import scipy; print(f\"‚úÖ SciPy {scipy.__version__}\")' || echo '‚ùå SciPy failed'; \
		python -c 'import matplotlib; print(f\"‚úÖ Matplotlib {matplotlib.__version__}\")' || echo '‚ùå Matplotlib failed'; \
		python -c 'import networkx; print(f\"‚úÖ NetworkX {networkx.__version__}\")' || echo '‚ùå NetworkX failed'; \
		echo 'üéâ Scientific stack test completed!'"

test-specific: ## Run specific test file (Usage: make -f Makefile.nix.dev test-specific FILE=test_experiment_builder.py)
	@echo "üéØ Running specific test: $(FILE)"
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/$(FILE) -v --tb=short --color=yes

test-class: ## Run specific test class (Usage: make -f Makefile.nix.dev test-class CLASS=TestExperimentBuilder)
	@echo "üéØ Running test class: $(CLASS)"
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/ -k '$(CLASS)' -v --tb=short --color=yes

test-keyword: ## Run tests matching keyword (Usage: make -f Makefile.nix.dev test-keyword KEYWORD=builder)
	@echo "üîç Running tests matching keyword: $(KEYWORD)"
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/ -k '$(KEYWORD)' -v --tb=short --color=yes

test-coverage: ## Run tests with coverage report
	@echo "üìä Running tests with coverage..."
	nix develop --command bash -c "\
		python -m pytest nest_elephant_tvb/orchestrator/tests/ \
		--cov=nest_elephant_tvb.orchestrator \
		--cov-report=term-missing \
		--cov-report=html \
		--cov-fail-under=80 \
		--tb=short --color=yes || echo '‚ö†Ô∏è Coverage tool might not be installed'"

test-performance: ## Run tests with performance timing
	@echo "‚è±Ô∏è Running tests with performance timing..."
	nix develop --command python -m pytest nest_elephant_tvb/orchestrator/tests/ --durations=10 --tb=short --color=yes -v

# UV Project Management
uv-init: ## Initialize UV project with dependencies
	@echo "üì¶ Initializing UV project..."
	nix develop --command bash -c "\
		if [ ! -f 'pyproject.toml' ]; then \
			uv init --python \$$(which python) --no-readme; \
		fi; \
		echo 'üì¶ Installing core packages...'; \
		uv add numpy scipy matplotlib networkx pillow jupyter jupyterlab pytest pyyaml; \
		echo 'üß¨ Installing specialized packages...'; \
		uv add elephant cython numba tvb-data tvb-gdist tvb-library --quiet || echo '‚ö†Ô∏è Some specialized packages failed'; \
		echo '‚úÖ UV project ready!'"

uv-sync: ## Sync UV dependencies
	@echo "üîÑ Syncing UV dependencies..."
	nix develop --command uv sync

uv-add: ## Add package with UV (Usage: make -f Makefile.nix.dev uv-add PKG=package-name)
	@echo "‚ûï Adding package: $(PKG)"
	nix develop --command uv add $(PKG)

uv-status: ## Show UV project status
	@echo "üìä UV Project Status"
	@echo "==================="
	nix develop --command bash -c "\
		echo 'Project file exists:' \$$([ -f pyproject.toml ] && echo '‚úÖ' || echo '‚ùå'); \
		echo 'Virtual environment:' \$$([ -d .venv ] && echo '‚úÖ .venv/' || echo '‚ùå No .venv'); \
		echo 'Lock file:' \$$([ -f uv.lock ] && echo '‚úÖ' || echo '‚ùå'); \
		if [ -f pyproject.toml ]; then \
			echo 'Dependencies:'; \
			grep -A 20 'dependencies.*=' pyproject.toml | grep '\"' | head -10; \
		fi"

# Legacy shell tests (compatibility)
test-shell: ## Run legacy shell script tests
	@echo "üêö Running legacy shell script tests..."
	nix develop --command bash -c "\
		if [ -f './tests/test_co-sim.sh' ]; then \
			cd tests && ./test_co-sim.sh; \
		else \
			echo '‚ùå Legacy shell tests not found'; \
		fi"

# Jupyter and development servers
jupyter: ## Start Jupyter Lab server
	@echo "üìì Starting Jupyter Lab..."
	nix develop --command bash -c "\
		if [ -d '.venv' ]; then source .venv/bin/activate; fi; \
		jupyter lab --ip=0.0.0.0 --port=8893 --no-browser --allow-root"

jupyter-quick: ## Start Jupyter Lab with quick environment
	@echo "üìì Starting Jupyter Lab (quick environment)..."
	nix develop .#macos-quick --command bash -c "\
		if [ -d '.venv' ]; then source .venv/bin/activate; fi; \
		jupyter lab --ip=0.0.0.0 --port=8893 --no-browser"

# Development utilities
lint: ## Run code linting
	@echo "üîç Running code linting..."
	nix develop --command bash -c "\
		python -m flake8 nest_elephant_tvb/orchestrator/ --max-line-length=120 --extend-ignore=E203,W503 || echo '‚ö†Ô∏è Install flake8: uv add flake8'"

clean: ## Clean up build artifacts and caches
	@echo "üßπ Cleaning up..."
	@echo "Removing Python cache files..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -name "*.pyc" -delete 2>/dev/null || true
	@echo "Removing UV cache..."
	rm -rf .venv 2>/dev/null || true
	@echo "Cleaning Nix store (optional)..."
	nix-collect-garbage -d || echo "‚ö†Ô∏è Nix garbage collection failed (this is optional)"

clean-full: ## Full cleanup including lock files
	@echo "üßπ Full cleanup..."
	$(MAKE) -f Makefile.nix clean
	rm -f uv.lock pyproject.toml
	@echo "‚úÖ Full cleanup completed"

# CI/CD and verification
verify: test test-mpi test-scientific ## Run comprehensive verification
	@echo "‚úÖ Comprehensive verification completed!"

ci-test: ## Run CI-friendly test suite
	@echo "üîÑ Running CI test pipeline..."
	@echo "1/4 Testing Nix environment loading..."
	nix develop --command echo "‚úÖ Environment loads"
	@echo "2/4 Testing scientific packages..."
	$(MAKE) -f Makefile.nix test-scientific
	@echo "3/4 Testing MPI functionality..."
	$(MAKE) -f Makefile.nix test-mpi
	@echo "4/4 Running main test suite..."
	$(MAKE) -f Makefile.nix test
	@echo "‚úÖ CI pipeline completed successfully!"

# Performance benchmarking
benchmark: ## Run performance benchmarks
	@echo "‚ö° Running performance benchmarks..."
	nix develop --command bash -c "\
		echo 'üèÅ Environment startup time:'; \
		time nix develop --command echo 'Environment loaded'; \
		echo 'üß™ Python import speed:'; \
		time python -c 'import numpy, scipy, matplotlib; print(\"Packages imported\")'; \
		if command -v nest >/dev/null; then \
			echo 'üß† NEST import speed:'; \
			time python -c 'import nest; print(\"NEST imported\")'; \
		fi"

